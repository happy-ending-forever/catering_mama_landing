---
import '../styles/global.css';
import { 
  Utensils, 
  Star, 
  ChevronRight, 
  CheckCircle, 
  Heart, 
  Users, 
  Briefcase, 
  Leaf, 
  Flame, 
  Award, 
  Timer, 
  MapPin, 
  Clock, 
  Phone, 
  MessageCircle,
  Menu,
  X
} from 'lucide-astro';

const whatsappLink = "https://wa.me/628123456789?text=Halo%20Catering%20Mama,%20saya%20tertarik%20untuk%20bertanya%20mengenai%20layanan%20katering.";

const navLinks = [
  { name: 'Layanan', href: '#layanan' },
  { name: 'Menu', href: '#menu' },
  { name: 'Keunggulan', href: '#keunggulan' },
  { name: 'Testimoni', href: '#testimoni' },
  { name: 'Kontak', href: '#kontak' },
];

const services = [
  {
    title: 'Pernikahan',
    desc: 'Paket katering prasmanan premium untuk hari bahagia Anda dengan dekorasi yang elegan dan menu eksklusif.',
    icon: 'heart',
    image: 'https://images.unsplash.com/photo-1519225421980-715cb0215aed?q=80&w=800&auto=format&fit=crop',
    gridClass: 'md:col-span-2 md:row-span-2',
    iconSize: 'w-8 h-8',
    titleSize: 'text-3xl',
    descSize: 'text-base'
  },
  {
    title: 'Aqiqah',
    desc: "Layanan Aqiqah syar'i yang praktis dengan olahan kambing lezat.",
    icon: 'users',
    image: 'https://images.unsplash.com/photo-1511795409834-ef04bbd61622?q=80&w=800&auto=format&fit=crop',
    gridClass: 'md:col-span-2 md:row-span-1',
    iconSize: 'w-6 h-6',
    titleSize: 'text-xl',
    descSize: 'text-sm'
  },
  {
    title: 'Event Kantor',
    desc: 'Katering profesional untuk meeting dan gathering.',
    icon: 'briefcase',
    image: 'https://images.unsplash.com/photo-1467003909585-2f8a72700288?q=80&w=800&auto=format&fit=crop',
    gridClass: 'md:col-span-1 md:row-span-1',
    iconSize: 'w-6 h-6',
    titleSize: 'text-xl',
    descSize: 'text-sm'
  },
  {
    title: 'Nasi Box',
    desc: 'Menu nasi kotak higienis dan variatif.',
    icon: 'utensils',
    image: 'https://images.unsplash.com/photo-1543339308-43e59d6b73a6?q=80&w=800&auto=format&fit=crop',
    gridClass: 'md:col-span-1 md:row-span-1',
    iconSize: 'w-6 h-6',
    titleSize: 'text-xl',
    descSize: 'text-sm'
  }
];

const featuredMenus = [
  {
    name: 'Nasi Kuning Spesial Mama',
    price: 'Rp 35.000',
    tag: 'Best Seller',
    image: 'https://images.unsplash.com/photo-1512621776951-a57141f2eefd?q=80&w=800&auto=format&fit=crop'
  },
  {
    name: 'Sate Ayam Madura Asli',
    price: 'Rp 45.000',
    tag: 'Terfavorit',
    image: 'https://images.unsplash.com/photo-1541529086526-db283c563270?q=80&w=800&auto=format&fit=crop'
  },
  {
    name: 'Rendang Daging Sapi Premium',
    price: 'Rp 55.000',
    tag: 'Signature',
    image: 'https://images.unsplash.com/photo-1610057099443-fde8c4d50f91?q=80&w=800&auto=format&fit=crop'
  }
];

const testimonials = [
  { 
    name: 'Siska Amelia', 
    role: 'Pengantin', 
    quote: 'Catering Mama bikin resepsiku berkesan banget! Tamu-tamu pada muji rendang dan sate ayamnya. Pelayanannya juga ramah.',
    avatar: 'https://i.pravatar.cc/100?u=siska'
  },
  { 
    name: 'Andi Pratama', 
    role: 'Corporate HR', 
    quote: 'Menu nasi kotaknya variatif banget, nggak bikin bosan buat meeting mingguan. Pengiriman selalu on-time, top banget!',
    avatar: 'https://i.pravatar.cc/100?u=andi'
  },
  { 
    name: 'Ibu Rahma', 
    role: 'Pelanggan Aqiqah', 
    quote: 'Aqiqah anak saya jadi gampang banget berkat Catering Mama. Kambingnya empuk, porsinya pas, dan rapi packing-nya.',
    avatar: 'https://i.pravatar.cc/100?u=rahma'
  }
];

const galleryImages = [
  'https://images.unsplash.com/photo-1467003909585-2f8a72700288?q=80&w=600&auto=format&fit=crop',
  'https://images.unsplash.com/photo-1555244162-803834f70033?q=80&w=600&auto=format&fit=crop',
  'https://images.unsplash.com/photo-1519225421980-715cb0215aed?q=80&w=600&auto=format&fit=crop',
  'https://images.unsplash.com/photo-1533777857889-4be7c70b33f7?q=80&w=600&auto=format&fit=crop'
];
---

<!DOCTYPE html>
<html lang="id" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Catering Mama - Katering #1 Pilihan Keluarga. Sajian lezat dengan cinta untuk pernikahan, aqiqah, event kantor, dan nasi box. Higienis, halal, tepat waktu.">
  <meta name="keywords" content="catering, katering, pernikahan, aqiqah, nasi box, Jakarta, halal">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <title>Catering Mama - Sajian Lezat Dengan Cinta</title>
</head>

<body class="text-slate-800 bg-white selection:bg-yellow-200 overflow-x-hidden">
  <!-- Navigation -->
  <nav id="navbar" class="fixed w-full z-50 transition-all duration-300 py-6">
    <div class="container mx-auto px-6 flex justify-between items-center">
      <a href="/" class="flex items-center gap-2">
        <div class="bg-yellow-400 p-2 rounded-lg">
          <Utensils class="w-6 h-6 text-white" />
        </div>
        <span class="text-2xl font-bold tracking-tight font-outfit">Catering<span class="text-yellow-500">Mama</span></span>
      </a>

      <!-- Desktop Nav -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a href={link.href} class="font-medium hover:text-yellow-500 transition-colors">{link.name}</a>
        ))}
        <a 
          href={whatsappLink}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-yellow-400 hover:bg-yellow-500 text-white px-6 py-2.5 rounded-full font-semibold transition-all shadow-md hover:shadow-lg active:scale-95"
        >
          Pesan Sekarang
        </a>
      </div>

      <!-- Mobile Toggle -->
      <button class="md:hidden" id="menu-toggle" aria-label="Toggle Menu">
        <Menu id="menu-icon-open" class="w-6 h-6" />
        <X id="menu-icon-close" class="w-6 h-6 hidden" />
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden absolute top-full left-0 w-full bg-white border-t p-6 shadow-xl flex flex-col gap-4">
      {navLinks.map((link) => (
        <a href={link.href} class="text-lg font-medium mobile-link">{link.name}</a>
      ))}
      <a 
        href={whatsappLink}
        class="bg-yellow-400 text-white text-center py-3 rounded-xl font-bold"
      >
        Pesan Sekarang
      </a>
    </div>
  </nav>

  <!-- Hero Section -->
  <header class="relative min-h-[85vh] flex items-center pt-24 md:pt-32 pb-16">
    <div class="container mx-auto px-6 grid md:grid-cols-2 gap-10 lg:gap-20 items-center">
      <div class="space-y-8 animate-fade-in-up">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-[1.15] tracking-tight">
          Sajian <span class="text-yellow-500">Lezat</span> Dengan Cinta Dari Mama.
        </h1>

        <div>
          <div class="inline-flex items-center gap-2 bg-yellow-50 text-yellow-700 px-4 py-2 rounded-full text-xs md:text-sm font-semibold border border-yellow-100">
            <Star class="w-4 h-4 fill-yellow-500 text-yellow-500" />
            Katering #1 Pilihan Keluarga
          </div>
        </div>

        <p class="text-base md:text-lg text-slate-600 max-w-lg leading-relaxed">
          Menghadirkan rasa otentik rumahan dengan kualitas premium untuk setiap momen spesial Anda. Higienis, halal, dan tepat waktu.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 pt-2">
          <a href={whatsappLink} class="flex items-center justify-center gap-2 bg-yellow-400 hover:bg-yellow-500 text-white px-8 py-4 rounded-2xl font-bold text-lg transition-all shadow-xl shadow-yellow-200 hover:-translate-y-1">
            Pesan Sekarang <ChevronRight class="w-5 h-5" />
          </a>
          <a href="#menu" class="flex items-center justify-center gap-2 bg-white border-2 border-slate-100 hover:border-yellow-200 px-8 py-4 rounded-2xl font-bold text-lg transition-all">
            Lihat Menu
          </a>
        </div>

        <div class="flex items-center gap-4 text-sm text-slate-500 pt-6 border-t border-slate-50">
          <div class="flex -space-x-3">
            {[11, 12, 13, 14].map((img) => (
              <img 
                src={`https://i.pravatar.cc/100?img=${img}`} 
                alt="User" 
                class="w-10 h-10 rounded-full border-2 border-white bg-slate-200"
                loading="lazy"
              />
            ))}
          </div>
          <span class="font-medium text-xs md:text-sm">Dipesan oleh 1,000+ pelanggan puas bulan ini</span>
        </div>
      </div>

      <div class="relative flex justify-center lg:justify-end items-center">
        <div class="absolute -inset-10 bg-yellow-400/10 rounded-full blur-3xl -z-10"></div>
        <div class="relative w-full max-w-sm lg:max-w-md">
          <div class="rounded-[3rem] overflow-hidden shadow-2xl transform md:-rotate-2 hover:rotate-0 transition-transform duration-700">
            <img 
              src="https://images.unsplash.com/photo-1555244162-803834f70033?q=80&w=1000&auto=format&fit=crop" 
              alt="Hidangan lezat dari Catering Mama" 
              class="w-full h-[450px] lg:h-[550px] object-cover"
              loading="eager"
            />
          </div>
          <div class="absolute -bottom-6 -left-6 lg:-left-12 bg-white p-5 md:p-6 rounded-3xl shadow-2xl hidden lg:block animate-bounce-slow border border-slate-50">
            <div class="flex items-center gap-4">
              <div class="bg-green-100 p-3 rounded-2xl">
                <CheckCircle class="w-6 h-6 text-green-600" />
              </div>
              <div>
                <p class="font-bold text-base">100% Halal</p>
                <p class="text-xs text-slate-500 font-medium">Terverifikasi MUI</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Services Section (Bento Grid) -->
  <section id="layanan" class="py-24 bg-slate-50">
    <div class="container mx-auto px-6">
      <div class="text-center max-w-2xl mx-auto mb-20 space-y-4">
        <h2 class="text-4xl md:text-5xl font-bold">Layanan Kami</h2>
        <p class="text-slate-600">Pilihan paket katering profesional yang dikemas secara estetik dan higienis.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 md:grid-rows-2 gap-6 h-auto md:h-[700px]">
        {services.map((item) => (
          <div class={`group relative bg-white rounded-[2.5rem] overflow-hidden shadow-sm hover:shadow-2xl transition-all duration-500 border border-slate-100 flex flex-col ${item.gridClass}`}>
            <div class="absolute inset-0 z-0">
              <img 
                src={item.image} 
                alt={item.title} 
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/40 to-transparent opacity-80 group-hover:opacity-90 transition-opacity"></div>
            </div>
            <div class="relative z-10 p-8 h-full flex flex-col justify-end text-white">
              <div class="bg-yellow-400 w-fit p-3 rounded-2xl mb-4 shadow-lg group-hover:scale-110 transition-transform">
                {item.icon === 'heart' && <Heart class={`${item.iconSize} text-yellow-600`} />}
                {item.icon === 'users' && <Users class={`${item.iconSize} text-yellow-600`} />}
                {item.icon === 'briefcase' && <Briefcase class={`${item.iconSize} text-yellow-600`} />}
                {item.icon === 'utensils' && <Utensils class={`${item.iconSize} text-yellow-600`} />}
              </div>
              <h3 class={`font-bold mb-2 ${item.titleSize}`}>{item.title}</h3>
              <p class={`text-slate-100 leading-relaxed mb-4 line-clamp-2 group-hover:line-clamp-none transition-all ${item.descSize}`}>
                {item.desc}
              </p>
              <button class="flex items-center gap-2 font-bold text-yellow-400 group/btn">
                Cek Detail <ChevronRight class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform" />
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Menu Section -->
  <section id="menu" class="py-24">
    <div class="container mx-auto px-6">
      <div class="flex flex-col items-center text-center mb-12 space-y-4">
        <div class="max-w-2xl space-y-4">
          <h2 class="text-4xl md:text-5xl font-bold">Menu Unggulan</h2>
          <p class="text-slate-600">Pilihan menu terlaris yang selalu menjadi favorit pelanggan kami untuk berbagai kesempatan.</p>
        </div>
      </div>

      <div class="flex justify-end mb-8">
        <a href={whatsappLink} class="text-yellow-600 font-bold border-b-2 border-yellow-200 hover:border-yellow-500 pb-1 transition-all flex items-center gap-2">
          Lihat Semua Menu <ChevronRight class="w-4 h-4" />
        </a>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {featuredMenus.map((menu) => (
          <div class="bg-white rounded-[2.5rem] overflow-hidden group border border-slate-100 shadow-sm hover:shadow-xl transition-all flex flex-col h-full">
            <div class="aspect-square overflow-hidden relative">
              <img 
                src={menu.image} 
                alt={menu.name} 
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                loading="lazy"
              />
              <div class="absolute top-6 right-6 bg-yellow-400 text-white px-5 py-2 rounded-full text-xs font-bold shadow-lg">
                {menu.tag}
              </div>
            </div>
            <div class="p-10 flex flex-col flex-grow">
              <div class="flex-grow">
                <h4 class="text-2xl font-bold mb-3 line-clamp-2 h-16">{menu.name}</h4>
                <div class="flex justify-between items-center mb-6">
                  <span class="text-slate-500 text-sm">Mulai dari</span>
                  <span class="text-2xl font-bold text-yellow-600">{menu.price}</span>
                </div>
              </div>
              <a 
                href={whatsappLink}
                class="block w-full py-4 border-2 border-yellow-100 text-yellow-700 font-bold rounded-2xl hover:bg-yellow-400 hover:text-white hover:border-yellow-400 transition-all active:scale-95 text-center"
              >
                Pesan Menu Ini
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Keunggulan Section -->
  <section id="keunggulan" class="py-24 bg-yellow-400 text-white relative overflow-hidden">
    <div class="absolute top-0 right-0 w-96 h-96 bg-yellow-300 rounded-full blur-3xl opacity-50 -mr-48 -mt-48"></div>
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-16 lg:gap-20 items-center">
        <div class="space-y-12">
          <div class="space-y-6">
            <h2 class="text-4xl md:text-5xl font-bold leading-tight">Mengapa Harus Memilih<br />Catering Mama?</h2>
            <p class="text-yellow-50 text-xl">Kami tidak hanya mengantarkan makanan, tapi kami mengantarkan pengalaman rasa yang tak terlupakan.</p>
          </div>

          <div class="grid sm:grid-cols-2 gap-6">
            <div class="flex flex-col gap-4 p-6 bg-white rounded-[2rem] shadow-xl shadow-yellow-500/20 group hover:-translate-y-1 transition-all duration-300">
              <div class="bg-yellow-100 w-fit p-3 rounded-2xl text-yellow-600 group-hover:scale-110 transition-transform">
                <Leaf class="w-6 h-6" />
              </div>
              <div>
                <h4 class="font-bold text-lg mb-1 text-slate-900">Bahan Segar</h4>
                <p class="text-sm text-slate-500 leading-relaxed font-medium">Hanya menggunakan bahan baku pilihan setiap harinya.</p>
              </div>
            </div>
            <div class="flex flex-col gap-4 p-6 bg-white rounded-[2rem] shadow-xl shadow-yellow-500/20 group hover:-translate-y-1 transition-all duration-300">
              <div class="bg-yellow-100 w-fit p-3 rounded-2xl text-yellow-600 group-hover:scale-110 transition-transform">
                <Flame class="w-6 h-6" />
              </div>
              <div>
                <h4 class="font-bold text-lg mb-1 text-slate-900">Rasa Otentik</h4>
                <p class="text-sm text-slate-500 leading-relaxed font-medium">Resep warisan keluarga dengan bumbu rempah asli.</p>
              </div>
            </div>
            <div class="flex flex-col gap-4 p-6 bg-white rounded-[2rem] shadow-xl shadow-yellow-500/20 group hover:-translate-y-1 transition-all duration-300">
              <div class="bg-yellow-100 w-fit p-3 rounded-2xl text-yellow-600 group-hover:scale-110 transition-transform">
                <Award class="w-6 h-6" />
              </div>
              <div>
                <h4 class="font-bold text-lg mb-1 text-slate-900">Sertifikat Halal</h4>
                <p class="text-sm text-slate-500 leading-relaxed font-medium">Semua proses produksi kami terjamin kehalalannya.</p>
              </div>
            </div>
            <div class="flex flex-col gap-4 p-6 bg-white rounded-[2rem] shadow-xl shadow-yellow-500/20 group hover:-translate-y-1 transition-all duration-300">
              <div class="bg-yellow-100 w-fit p-3 rounded-2xl text-yellow-600 group-hover:scale-110 transition-transform">
                <Timer class="w-6 h-6" />
              </div>
              <div>
                <h4 class="font-bold text-lg mb-1 text-slate-900">Tepat Waktu</h4>
                <p class="text-sm text-slate-500 leading-relaxed font-medium">Garansi pengiriman sampai di lokasi sebelum acara mulai.</p>
              </div>
            </div>
          </div>
        </div>
        <div class="relative">
          <div class="bg-white p-5 rounded-[3rem] shadow-2xl transform -rotate-3">
            <img 
              src="https://images.unsplash.com/photo-1556910103-1c02745aae4d?q=80&w=1000&auto=format&fit=crop" 
              alt="Proses memasak di dapur Catering Mama" 
              class="rounded-[2rem] w-full object-cover aspect-[4/3]"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial Section -->
  <section id="testimoni" class="py-24">
    <div class="container mx-auto px-6">
      <div class="text-center max-w-2xl mx-auto mb-20 space-y-4">
        <h2 class="text-4xl md:text-5xl font-bold">Apa Kata Pelanggan Kami?</h2>
        <div class="flex justify-center gap-1.5 text-yellow-400">
          {[1, 2, 3, 4, 5].map(() => (
            <Star class="w-6 h-6 fill-current" />
          ))}
        </div>
      </div>
      <div class="grid md:grid-cols-3 gap-10">
        {testimonials.map((t) => (
          <div class="bg-slate-50 p-10 rounded-[2.5rem] relative">
            <div class="absolute top-10 right-10 text-yellow-200 opacity-50">
              <svg width="45" height="36" viewBox="0 0 45 36" fill="currentColor">
                <path d="M13.5 0C6.045 0 0 6.045 0 13.5C0 19.89 4.365 25.29 10.305 26.685C9.36 29.385 6.75 31.5 3.15 32.85L0 34.2L1.8 36C9.9 33.3 14.85 27.45 14.85 19.8V0H13.5ZM43.65 0C36.195 0 30.15 6.045 30.15 13.5C30.15 19.89 34.515 25.29 40.455 26.685C39.51 29.385 36.9 31.5 33.3 32.85L30.15 34.2L31.95 36C40.05 33.3 45 27.45 45 19.8V0H43.65Z" />
              </svg>
            </div>
            <p class="italic text-slate-600 mb-10 relative z-10 leading-relaxed text-lg">"{t.quote}"</p>
            <div class="flex items-center gap-4">
              <img src={t.avatar} alt={t.name} class="w-14 h-14 rounded-full border-2 border-white shadow-md" loading="lazy" />
              <div>
                <h5 class="font-bold text-lg">{t.name}</h5>
                <p class="text-sm text-slate-500 font-medium">{t.role}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <section class="py-24 bg-slate-50 overflow-hidden">
    <div class="container mx-auto px-6 text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">Dokumentasi Acara</h2>
      <p class="text-slate-600">Berbagai momen berkesan yang kami tangani dengan sepenuh hati.</p>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 px-6">
      {galleryImages.map((img) => (
        <div class="rounded-[2rem] overflow-hidden aspect-square shadow-md hover:scale-95 transition-transform duration-500 cursor-pointer">
          <img 
            src={img} 
            alt="Dokumentasi Acara Catering Mama" 
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </section>

  <!-- Contact & Map Section -->
  <section id="kontak" class="py-24">
    <div class="container mx-auto px-6">
      <div class="bg-white rounded-[4rem] shadow-2xl overflow-hidden border border-slate-100 flex flex-col md:flex-row">
        <div class="md:w-1/2 p-12 lg:p-20 space-y-12">
          <div class="space-y-6">
            <h2 class="text-4xl md:text-5xl font-bold leading-tight">Siap Menghidangkan Yang Terbaik?</h2>
            <p class="text-slate-600 text-lg">Hubungi kami untuk konsultasi menu dan penawaran harga spesial sesuai budget Anda.</p>
          </div>

          <div class="space-y-8">
            <div class="flex gap-5 items-center">
              <div class="bg-yellow-100 p-4 rounded-2xl text-yellow-600">
                <MapPin class="w-7 h-7" />
              </div>
              <div>
                <h5 class="font-bold text-lg">Alamat Workshop</h5>
                <p class="text-slate-500">Jl. Kebahagiaan No. 123, Jakarta Selatan</p>
              </div>
            </div>
            <div class="flex gap-5 items-center">
              <div class="bg-yellow-100 p-4 rounded-2xl text-yellow-600">
                <Clock class="w-7 h-7" />
              </div>
              <div>
