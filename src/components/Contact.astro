---
import { MapPin, Clock, Phone, MessageCircle } from 'lucide-astro';

interface Props {
  whatsappLink: string;
}

const { whatsappLink } = Astro.props;
---

<section id="kontak" class="py-24">
  <div class="container mx-auto px-6">
    <div class="bg-white rounded-[4rem] shadow-2xl overflow-hidden border border-slate-100 flex flex-col md:flex-row">
      <div class="md:w-1/2 p-12 lg:p-20 space-y-12">
        <div class="space-y-6">
          <h2 class="text-4xl md:text-5xl font-bold leading-tight">Siap Menghidangkan Yang Terbaik?</h2>
          <p class="text-slate-600 text-lg">Hubungi kami untuk konsultasi menu dan penawaran harga spesial sesuai budget Anda.</p>
        </div>

        <div class="space-y-8">
          <div class="flex gap-5 items-center">
            <div class="bg-yellow-100 p-4 rounded-2xl text-yellow-600">
              <MapPin class="w-7 h-7" />
            </div>
            <div>
              <h5 class="font-bold text-lg">Alamat Workshop</h5>
              <p class="text-slate-500">Jl. Kebahagiaan No. 123, Jakarta Selatan</p>
            </div>
          </div>
          <div class="flex gap-5 items-center">
            <div class="bg-yellow-100 p-4 rounded-2xl text-yellow-600">
              <Clock class="w-7 h-7" />
            </div>
            <div>
              <h5 class="font-bold text-lg">Jam Operasional</h5>
              <p class="text-slate-500">Senin - Minggu: 08.00 - 20.00 WIB</p>
            </div>
          </div>
          <div class="flex gap-5 items-center">
            <div class="bg-yellow-100 p-4 rounded-2xl text-yellow-600">
              <Phone class="w-7 h-7" />
            </div>
            <div>
              <h5 class="font-bold text-lg">WhatsApp Hotline</h5>
              <p class="text-slate-500 font-medium">+62 812-3456-789</p>
            </div>
          </div>
        </div>

        <a 
          href={whatsappLink}
          class="inline-flex items-center gap-4 bg-[#25D366] hover:bg-[#128C7E] text-white px-12 py-6 rounded-[2rem] font-bold text-xl transition-all shadow-2xl shadow-green-100 active:scale-95 hover:-translate-y-1"
        >
          <MessageCircle class="w-7 h-7" /> Konsultasi Sekarang
        </a>
      </div>
      <div class="md:w-1/2 bg-slate-200 min-h-[500px]">
        <div class="w-full h-full relative bg-slate-300 flex items-center justify-center overflow-hidden">
          <img 
            src="https://images.unsplash.com/photo-1524661135-423995f22d0b?q=80&w=1000&auto=format&fit=crop" 
            alt="Peta lokasi Catering Mama" 
            class="w-full h-full object-cover opacity-50 grayscale"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-yellow-400/10 pointer-events-none"></div>
          <div class="absolute bg-white p-6 rounded-3xl shadow-2xl flex items-center gap-4 animate-pulse">
            <div class="bg-yellow-400 p-3 rounded-full text-white shadow-lg">
              <MapPin class="w-6 h-6" />
            </div>
            <span class="font-bold text-lg">Lokasi Catering Mama</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
